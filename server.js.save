  console.log("ğŸ“ Fil mottagen:", req.file.originalname);
  console.log("ğŸ“‚ Fil sparad till:", filePath);

  try {
    console.log("ğŸš€ Startar Python-klient...");

exec(`python3 run_client.py "${filePath}"`, { timeout: 120000 }, (error, stdout, stderr => {
  fs.unlink(filePath, err => {
