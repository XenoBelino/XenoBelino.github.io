const express = require("express");
const multer = require("multer");
const path = require("path");
const fs = require("fs");
const { exec } = require("child_process");

const app = express();

// ğŸŸ¡ Logga alla inkommande requests
app.use((req, res, next) => {
  console.log(`[${new Date().toISOString()}] ${req.method} ${req.url}`);
  next();
});

// ğŸ” CORS och sÃ¤kerhetsheaders (justerat fÃ¶r utveckling)
app.use((req, res, next) => {
  res.setHeader("Cross-Origin-Embedder-Policy", "require-corp");
  res.setHeader("Cross-Origin-Opener-Policy", "same-origin");
  res.setHeader("Access-Control-Allow-Origin", "*");
  res.setHeader("Access-Control-Allow-Headers", "*");
  next();
});

// ğŸ” Servera statiska filer frÃ¥n "public" mappen (t.ex. page.html)
app.use(express.static(path.join(__dirname, "public")));

// ğŸ—‚ï¸ Multer-konfiguration fÃ¶r att ta emot video
const storage = multer.diskStorage({
  destination: (req, file, cb) => cb(null, "uploads"),
  filename: (req, file, cb) => cb(null, Date.now() + "-" + file.originalname)
});

const upload = multer({
  storage,
  limits: {
    fileSize: 2 * 1024 * 1024 * 1024 // Max 2 GB
  }
});

app.get("/ping", (req, res) => {
  res.send("pong");
});

