<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Editor</title>
    
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/wavesurfer.js"></script>
    <link rel="stylesheet" href="assets/css/styles.css">
</head>
<body class="home">
    <div class="editor-content">
        <h1>Edit Your Files</h1>

        <!-- Browse Button -->
        <button onclick="document.getElementById('file-input').click()">Browse my files</button>
        <input type="file" id="file-input" style="display:none" onchange="handleFileSelect(event)" />
        
        <div id="file-info"></div>
        
        <!-- Save Button -->
        <button id="save-button" onclick="saveFile()">Save</button>

        <!-- Volume Slider -->
        <input type="range" min="0" max="100" value="50" id="volume-slider" />

        <!-- Waveform container -->
        <div id="waveform"></div>

        <!-- Video player -->
        <video id="video-player" width="320" height="240" controls>
            <source src="assets/videos/video.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    </div>

    <script>
        // Hantera filval
        function handleFileSelect(event) {
            const file = event.target.files[0];
            const fileInfoDiv = document.getElementById('file-info');
            const videoPlayer = document.getElementById('video-player');

            if (file) {
                fileInfoDiv.textContent = `Selected file: ${file.name}`;
                const fileURL = URL.createObjectURL(file);

                // Hantera ljudfil med Wavesurfer.js
                let extension = file.name.split('.').pop().toLowerCase();
                if (['mp3', 'wav', 'ogg'].includes(extension)) {
                    let wavesurfer = WaveSurfer.create({ container: '#waveform' });
                    wavesurfer.load(fileURL);
                } else if (['mp4', 'webm', 'avi'].includes(extension)) {
                    videoPlayer.src = fileURL;
                    videoPlayer.load(); // Ladda om videon
                } else {
                    fileInfoDiv.textContent = "Unsupported file type!";
                }
            }
        }

        // Spara fil (exempel)
        function saveFile() {
            alert("Your changes have been saved!");
        }

        // Hantera ljudvolym
        var slider = document.getElementById("volume-slider");
        var videoPlayer = document.getElementById('video-player');

        slider.oninput = function() {
            videoPlayer.volume = slider.value / 100;
        };
    </script>
</body>
</html>
