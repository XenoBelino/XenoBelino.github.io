document.addEventListener('DOMContentLoaded', function() {
    const changeBackgroundBtn = document.getElementById('change-background-btn');
    const modeButtons = document.getElementById('mode-buttons');
    let isDark = false;  // För att hålla reda på om bakgrunden är mörk eller ljus

    // Funktion för att växla bakgrundsläge
    function toggleBackground() {
        if (isDark) {
            document.body.classList.remove('dark-mode');
            document.body.classList.add('light-mode');
        } else {
            document.body.classList.remove('light-mode');
            document.body.classList.add('dark-mode');
        }
        isDark = !isDark;
    }

    // När användaren klickar på Change Background-knappen
    changeBackgroundBtn.addEventListener('click', function() {
        // Visa de dolda knapparna för att välja Dark/Light Mode
        modeButtons.style.display = 'flex'; 
    });

    // Funktionalitet för när användaren klickar på Dark Mode
    document.getElementById("dark-mode-btn").addEventListener("click", function() {
        if (!isDark) {
            toggleBackground(); // Växla till Dark Mode
        }
        modeButtons.style.display = 'none'; // Dölj knapparna efter att valet gjorts
    });

    // Funktionalitet för när användaren klickar på Light Mode
    document.getElementById("light-mode-btn").addEventListener("click", function() {
        if (isDark) {
            toggleBackground(); // Växla till Light Mode
        }
        modeButtons.style.display = 'none'; // Dölj knapparna efter att valet gjorts
    });
});
