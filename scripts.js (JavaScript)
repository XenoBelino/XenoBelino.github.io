document.getElementById('change-background-btn').addEventListener('click', function() {
    // Byt mellan Light Mode och Dark Mode
    document.body.classList.toggle('dark-mode');
    
    // Skapa en meny för att välja mellan Light Mode och Dark Mode
    const mode = document.body.classList.contains('dark-mode') ? 'Dark Mode' : 'Light Mode';
    alert('Switched to ' + mode);
});
