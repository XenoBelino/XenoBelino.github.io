let isDarkMode = false; // Flagga för att hålla reda på bakgrundsläget

function toggleBackground() {
    const background = document.getElementById("background");
    if (isDarkMode) {
        background.classList.remove("dark-background");
    } else {
        background.classList.add("dark-background");
    }
    isDarkMode = !isDarkMode;
}

// Klickhändelse för knappen "Change Background"
document.getElementById("change-background-btn").addEventListener("click", () => {
    const lightModeOption = confirm("Choose Light Mode (OK) or Dark Mode (Cancel).");
    if (lightModeOption) {
        toggleBackground(); // Växla till ljus bakgrund
    } else {
        toggleBackground(); // Växla till mörk bakgrund
    }
});
