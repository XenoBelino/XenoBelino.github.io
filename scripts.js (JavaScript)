// N채r knappen trycks p책, v채xla mellan light mode och dark mode
document.querySelector('.change-background-btn').addEventListener('click', function() {
    // Kollar om vi redan 채r i light mode eller dark mode
    if (document.body.classList.contains('light-mode')) {
        // Byt till dark mode
        document.body.classList.remove('light-mode');
        document.body.classList.add('dark-mode');
    } else {
        // Byt till light mode
        document.body.classList.remove('dark-mode');
        document.body.classList.add('light-mode');
    }
});
