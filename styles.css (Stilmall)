/* Bakgrund för Light Mode */
.light-mode {
    background: linear-gradient(to bottom, #a0a0f2, #ffb6c1);
    background-size: 100% 100%;
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    animation: backgroundAnimation 10s infinite;
}

.light-mode .stars {
    position: absolute;
