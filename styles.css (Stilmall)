    transition: background-color 0.3s, transform 0.2s;
    margin: 10px;
}

button:hover {
    background-color: #4F4A85;
    transform: scale(1.05);
}

button:active {
    transform: scale(0.98);
}

/* För "Change Background"-knappen */
#change-background-btn {
    position: absolute;
    top: 20px;
    right: 20px;
    z-index: 10;
}

/* Stjärnorna */
.stars {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
}

.star {
    position: absolute;
    width: 10px;
    height: 10px;
    background-color: #fff;
    border-radius: 50%;
    animation: star-fall 2s infinite ease-in-out;
}

.star:before {
    content: '';
    position: absolute;
    background-color: #fff;
    width: 2px;
    height: 15px;
    top: -5px;
    left: 4px;
    transform: rotate(-45deg);
}

/* Animation för stjärnorna */
@keyframes star-fall {
    0% {
        opacity: 1;
        transform: translateY(0) rotate(0deg);
    }
    100% {
        opacity: 0;
        transform: translateY(300px) rotate(360deg);
    }
}

.falling-star {
    position: absolute;
    width: 5px;
    height: 5px;
    background-color: #6ec1f5; /* Ljus blå färg för stjärnfall */
    border-radius: 50%;
    animation: fall 2s infinite ease-in-out;
}

@keyframes fall {
    0% {
        opacity: 1;
        transform: translateY(0) rotate(0deg);
    }
    100% {
        opacity: 0;
        transform: translateY(100vh) rotate(45deg);
    }
}
