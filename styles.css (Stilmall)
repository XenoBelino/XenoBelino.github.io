    left: 0;
    right: 0;
    height: 100%;
    width: 100%;
}

.star {
    position: absolute;
    background-color: white;
    border-radius: 50%;
    animation: starAnimation 3s infinite;
}

@keyframes backgroundAnimation {
    0% {
        background: linear-gradient(to bottom, #a0a0f2, #ffb6c1);
    }
    50% {
        background: linear-gradient(to bottom, #ffffff, #ffccff);
    }
    100% {
        background: linear-gradient(to bottom, #a0a0f2, #ffb6c1);
    }
}

/* Bakgrund för Dark Mode */
.dark-mode {
