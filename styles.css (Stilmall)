/* Grundinställningar */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Ställ in kroppens och html:s storlek */
body, html {
    width: 100%;
    height: 100%;
    font-family: Arial, sans-serif;
}

/* Dynamisk bakgrund */
.background {
    position: relative;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, #e0a1e0, #f5c0c0); /* Ljus bakgrund */
    transition: background 1s ease-in-out;
}

/* Mörkt läge bakgrund */
.dark-mode .background {
    background: linear-gradient(to bottom, #2a2a2a, #4b1e6b); /* Mörk bakgrund */
}

/* Moln */
.clouds {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 200px;
    background: url('https://www.example.com/clouds.png') no-repeat center;
    background-size: cover;
    opacity: 0.3;
}

/* Stjärnor */
.stars {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.5), rgba(255, 255, 255, 0)); /* Fjädrande stjärnor */
    animation: starsTwinkle 3s infinite;
    pointer-events: none;
}

/* Stjärnfall (enkel design för att ge illusionen av rörelse) */
.stars::after {
    content: '';
    position: absolute;
    top: 40%;
    left: 50%;
    width: 100px;
    height: 2px;
    background: #fff;
    transform: rotate(45deg);
    animation: meteorShower 2s infinite ease-in-out;
}

/* Animation för stjärnor */
@keyframes starsTwinkle {
    0% { opacity: 0.3; }
    50% { opacity: 1; }
    100% { opacity: 0.3; }
}

/* Animation för stjärnfall */
@keyframes meteorShower {
    0% { top: 20%; left: 40%; opacity: 0.6; }
    100% { top: 80%; left: 60%; opacity: 0; }
}

/* Innehåll */
.content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: #fff;
}

/* Bakgrundsändringsknapp */
#change-background-btn {
    position: fixed;
    top: 10px;
    right: 10px;
    padding: 10px 20px;
    background-color: #ff4c6a;
    color: white;
    border: none;
    cursor: pointer;
    z-index: 10;
}

/* Förändring av knappar */
button:hover {
    background-color: #ff2a3b;
}

/* Mörk läge knapp */
.dark-mode #change-background-btn {
    background-color: #4b1e6b;
}

.dark-mode button:hover {
    background-color: #a15a99;
}

/* Justering av knappar hitbox */
button {
    padding: 12px 25px;
    text-align: center;
    width: auto;
    height: auto;
}

/* För att undvika att knappen är för liten */
button:focus {
    outline: none;
}

/* För att knappen ska få större interaktionsområde */
#change-background-btn {
    width: 200px;
    height: 50px;
}
