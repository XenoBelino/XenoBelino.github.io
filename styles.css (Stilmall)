/* Grundinställningar */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Ställ in kroppens och html:s storlek */
body, html {
    width: 100%;
    height: 100%;
    font-family: Arial, sans-serif;
}

/* Dynamisk bakgrund */
.background {
    position: relative;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, #e0a1e0, #f5c0c0); /* Ljus bakgrund */
    transition: background 1s ease-in-out;
}

/* Mörkt läge bakgrund */
.dark-mode .background {
    background: linear-gradient(to bottom, #2a2a2a, #4b1e6b); /* Mörk bakgrund */
}

/* Stjärnor */
.stars {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url('https://i.imgur.com/23g3aOY.png') repeat; /* Använd stjärnbild */
    pointer-events: none;
    animation: twinkle 2s infinite;
}

/* Stjärnfall */
.stars::after {
    content: '';
    position: absolute;
    top: 10%;
    left: 50%;
    width: 100%;
    height: 100%;
    background-image: url('https://i.imgur.com/vJvJ1Z2.png'); /* Stjärnfall bild */
    animation: shooting-star 1.5s infinite linear;
}

/* Animation för att få stjärnorna att twinkle */
@keyframes twinkle {
    0% { opacity: 0.3; }
    50% { opacity: 1; }
    100% { opacity: 0.3; }
}

/* Animation för stjärnfall */
@keyframes shooting-star {
    0% {
        transform: translate(0, 0);
    }
    100% {
        transform: translate(-100%, 100%);
    }
}

/* Moln */
.clouds {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 50%;
    background: url('https://i.imgur.com/RdyTiZp.png') repeat-x;
    background-size: 100% 50%;
    animation: cloud-move 20s linear infinite;
}

/* Moln animation */
@keyframes cloud-move {
    0% {
        background-position: 0 0;
    }
    100% {
        background-position: 100% 0;
    }
}

/* Innehåll */
.content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: #fff;
}

/* Bakgrundsändringsknapp */
#change-background-btn {
    position: fixed;
    top: 10px;
    right: 10px;
    padding: 10px 20px;
    background-color: #ff4c6a;
    color: white;
    border: none;
    cursor: pointer;
    z-index: 100;
}

/* Förändring av knappar */
button:hover {
    background-color: #ff2a3b;
}

/* Mörk läge knapp */
.dark-mode #change-background-btn {
    background-color: #4b1e6b;
}

.dark-mode button:hover {
    background-color: #a15a99;
}
