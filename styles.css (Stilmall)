/* Allmänna inställningar */
body {
    font-family: 'Lato', sans-serif;
    background-color: #f0f0f0;
    margin: 0;
    padding: 0;
    color: #383351;
    line-height: 1.6;
}

/* Container för centrering och padding */
.container-lg {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
    max-width: 100%;
}

/* Stil för knappar */
button {
    padding: 12px 24px;
    border-radius: 8px;
    border: 2px solid #4F4A85;
    background-color: #383351;
    color: white;
    cursor: pointer;
    font-size: 16px;
    transition: background-color 0.3s, transform 0.2s;
}

button:hover {
    background-color: #4F4A85;
    transform: scale(1.05); /* Ger en lätt zoom-effekt på hover */
}

button:active {
    transform: scale(0.98); /* Gör knappen lite mindre när den är klickad */
}

/* Länk under rubriken */
h1 a {
    color: #383351;
    text-decoration: none;
    font-weight: 700;
}

/* För att förbättra layouten på små skärmar */
@media (max-width: 768px) {
    .container-lg {
        padding: 15px;
    }

    button {
        font-size: 14px;
        padding: 10px 20px;
    }
}

/* För ännu mindre skärmar som telefoner */
@media (max-width: 480px) {
    button {
        font-size: 12px;
        padding: 8px 16px;
    }
}

/* För att ge knapparna ett "fokus" när de är i fokus (för tillgänglighet) */
button:focus {
    outline: 3px solid #4F4A85;
    outline-offset: 2px;
}

/* Justering av "Change Background"-knappen */
#change-background-btn {
    position: absolute;
    top: 20px; /* Högt upp på sidan */
    right: 20px; /* Högerställt */
    z-index: 10;
}
